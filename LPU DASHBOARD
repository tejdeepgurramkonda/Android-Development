### KOTLIN CODE
package com.example.myapplication

import android.os.Bundle
import android.widget.Button
import android.widget.ImageButton
import android.widget.Toast
import androidx.activity.enableEdgeToEdge
import androidx.appcompat.app.AppCompatActivity
import androidx.core.view.ViewCompat
import androidx.core.view.WindowInsetsCompat
import com.example.myapplication1.R
import com.google.android.material.snackbar.Snackbar

class MainActivity2 : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        enableEdgeToEdge()
        setContentView(R.layout.activity_main)
        val a = findViewById<ImageButton>(R.id.imageButton)
        val b = findViewById<ImageButton>(R.id.imageButton2)
        val c = findViewById<ImageButton>(R.id.imageButton3)
        val d = findViewById<ImageButton>(R.id.imageButton4)
        val e = findViewById<ImageButton>(R.id.imageButton5)
        val f = findViewById<ImageButton>(R.id.imageButton6)
        val g = findViewById<ImageButton>(R.id.imageButton7)
        val h = findViewById<ImageButton>(R.id.imageButton9)
        val i = findViewById<ImageButton>(R.id.imageButton10)


        a.setOnClickListener { view ->
            Snackbar.make(view, "Mittal School of Business", Snackbar.LENGTH_LONG).setAction("undo") {
                Toast.makeText(this, "Successfully Unselected", Toast.LENGTH_LONG).show()
            }.show()
        }
        b.setOnClickListener { view ->
            Snackbar.make(view, "School of Pharmaceutical Sciences", Snackbar.LENGTH_LONG).setAction("undo") {
                Toast.makeText(this, "Successfully Unselected", Toast.LENGTH_LONG).show()
            }.show()
        }
        c.setOnClickListener { view ->
            Snackbar.make(view, "School of Hotel Management and Tourism", Snackbar.LENGTH_LONG).setAction("undo") {
                Toast.makeText(this, "Successfully Unselected", Toast.LENGTH_LONG).show()
            }.show()
        }
        d.setOnClickListener { view ->
            Snackbar.make(view, "School of Architecture and Design", Snackbar.LENGTH_LONG).setAction("undo") {
                Toast.makeText(this, "Successfully Unselected", Toast.LENGTH_LONG).show()
            }.show()
        }
        e.setOnClickListener { view ->
            Snackbar.make(view, "School of Polytechnic", Snackbar.LENGTH_LONG).setAction("undo") {
                Toast.makeText(this, "Successfully Unselected", Toast.LENGTH_LONG).show()
            }.show()
        }
        f.setOnClickListener { view ->
            Snackbar.make(view, "Mittal School of Business", Snackbar.LENGTH_LONG).setAction("undo") {
                Toast.makeText(this, "Successfully Unselected", Toast.LENGTH_LONG).show()
            }.show()
        }
        g.setOnClickListener { view ->
            Snackbar.make(view, "Mittal School of Business", Snackbar.LENGTH_LONG).setAction("undo") {
                Toast.makeText(this, "Successfully Unselected", Toast.LENGTH_LONG).show()
            }.show()
        }
        h.setOnClickListener { view ->
            Snackbar.make(view, "Mittal School of Business", Snackbar.LENGTH_LONG).setAction("undo") {
                Toast.makeText(this, "Successfully Unselected", Toast.LENGTH_LONG).show()
            }.show()
        }
        i.setOnClickListener { view ->
            Snackbar.make(view, "Mittal School of Business", Snackbar.LENGTH_LONG).setAction("undo") {
                Toast.makeText(this, "Successfully Unselected", Toast.LENGTH_LONG).show()
            }.show()
        }

       }}
