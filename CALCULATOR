### KOTLIN CODE
package com.example.calculator

import android.os.Bundle
import android.widget.TextView
import androidx.appcompat.app.AppCompatActivity
import com.example.creatingloginpage.R
import com.google.android.material.button.MaterialButton
import net.objecthunter.exp4j.ExpressionBuilder

class calculator : AppCompatActivity() {

    private lateinit var inputDisplay: TextView
    private lateinit var outputDisplay: TextView
    private var input = ""

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_calculator)

        inputDisplay = findViewById(R.id.input_display)
        outputDisplay = findViewById(R.id.output_display)

        // Number and operator buttons
        val buttons = listOf(
            Pair(findViewById<MaterialButton>(R.id.zero), "0"),
            Pair(findViewById<MaterialButton>(R.id.one), "1"),
            Pair(findViewById<MaterialButton>(R.id.two), "2"),
            Pair(findViewById<MaterialButton>(R.id.three), "3"),
            Pair(findViewById<MaterialButton>(R.id.four), "4"),
            Pair(findViewById<MaterialButton>(R.id.five), "5"),
            Pair(findViewById<MaterialButton>(R.id.six), "6"),
            Pair(findViewById<MaterialButton>(R.id.seven), "7"),
            Pair(findViewById<MaterialButton>(R.id.eight), "8"),
            Pair(findViewById<MaterialButton>(R.id.nine), "9"),
            Pair(findViewById<MaterialButton>(R.id.plus), "+"),
            Pair(findViewById<MaterialButton>(R.id.minus), "-"),
            Pair(findViewById<MaterialButton>(R.id.multiply), "*"),
            Pair(findViewById<MaterialButton>(R.id.divide), "/"),
            Pair(findViewById<MaterialButton>(R.id.open_bracket), "("),
            Pair(findViewById<MaterialButton>(R.id.closed_bracket), ")"),
            Pair(findViewById<MaterialButton>(R.id.dot), ".")
        )

        buttons.forEach { pair ->
            pair.first.setOnClickListener { appendToInput(pair.second) }
        }

        // Clear button
        findViewById<MaterialButton>(R.id.Clear).setOnClickListener {
            input = if (input.isNotEmpty()) input.dropLast(1) else ""
            updateInputDisplay()
        }

        // All Clear button
        findViewById<MaterialButton>(R.id.All_Clear).setOnClickListener {
            input = ""
            updateInputDisplay()
            outputDisplay.text = "0"
        }

        // Equals button
        findViewById<MaterialButton>(R.id.equals_to).setOnClickListener {
            try {
                val expression = ExpressionBuilder(input).build()
                val result = expression.evaluate()
                outputDisplay.text = formatResult(result)
            } catch (e: Exception) {
                outputDisplay.text = "Error"
            }
        }
    }

    private fun appendToInput(value: String) {
        input += value
        updateInputDisplay()
    }

    private fun updateInputDisplay() {
        inputDisplay.text = input
    }

    private fun formatResult(result: Double): String {
        val resultString = result.toString()
        return if (resultString.endsWith(".0")) {
            resultString.dropLast(2) // Remove ".0" if the result is an integer
        } else {
            resultString
        }
    }
}
